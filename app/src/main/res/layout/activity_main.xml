<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        툴바에 로그인 글씨 가운데에 넣기-->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="회원가입"
            android:textAlignment="center"
            android:textColor="@color/toolbar_title_blue"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="10dp" />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/ET_UserName"
        android:layout_width="321dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"

        android:background="@drawable/tv_border"
        android:textColor="#6A6868"
        android:textSize="14sp"


        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ET_name"
        app:layout_constraintStart_toStartOf="@+id/ET_name"
        app:layout_constraintTop_toBottomOf="@+id/ET_name" />

    <EditText
        android:id="@+id/ET_name"
        android:layout_width="321dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"

        android:background="@drawable/tv_border"
        android:textColor="#6A6868"
        android:textSize="14sp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ET_EmailAddress"

        android:layout_width="321dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"

        android:background="@drawable/tv_border"
        android:textColor="#6A6868"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ET_UserName"
        app:layout_constraintStart_toStartOf="@+id/ET_UserName"
        app:layout_constraintTop_toBottomOf="@+id/ET_UserName" />

    <EditText
        android:id="@+id/ET_Password"

        android:layout_width="321dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/tv_border"
        android:ems="10"
        android:hint="password (6자 이상)"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#6A6868"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ET_EmailAddress"
        app:layout_constraintStart_toStartOf="@+id/ET_EmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/ET_EmailAddress" />

    <EditText
        android:id="@+id/ET_password_check"

        android:layout_width="321dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"

        android:background="@drawable/tv_border"
        android:textColor="#6A6868"
        android:textSize="14sp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="password check"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/ET_Password"
        app:layout_constraintStart_toStartOf="@+id/ET_Password"
        app:layout_constraintTop_toBottomOf="@+id/ET_Password" />

    <EditText
        android:id="@+id/ET_school"

        android:layout_width="321dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/tv_border"
        android:ems="10"
        android:hint="School"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#6A6868"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ET_password_check"
        app:layout_constraintStart_toStartOf="@+id/ET_password_check"
        app:layout_constraintTop_toBottomOf="@+id/ET_password_check" />

    <EditText
        android:id="@+id/ET_Grade"

        android:layout_width="321dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/tv_border"
        android:ems="10"
        android:hint="Grade"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#6A6868"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ET_school"
        app:layout_constraintStart_toStartOf="@+id/ET_school"
        app:layout_constraintTop_toBottomOf="@+id/ET_school" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"

        android:layout_marginBottom="73dp"
        android:background="@drawable/button_circular"
        android:text="회원가입"
        android:textColor="@color/white"
        app:iconTint="#3B8ED1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ET_Grade"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/ET_Grade"
        app:layout_constraintTop_toBottomOf="@+id/ET_Grade"
        app:rippleColor="#1E72B5" />

</androidx.constraintlayout.widget.ConstraintLayout>